{
  "build": { "dockerfile": "Dockerfile" },
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {}
  },
  "forwardPorts": [6080],
  "portsAttributes": {
    "6080": { "label": "desktop" }
  },
  // Make the verilator wrapper available on PATH inside the container.
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/workspaces/FPGA-DVS-Gesture-Classifier/tools/verilator_wrapper"
  },
  // Run setup (venv + Python packages) automatically after the container starts.
  // OSS CAD Suite is already installed in the image; --skip-fpga avoids re-downloading it.
  "postCreateCommand": "python3 setup.py --skip-fpga",
  "customizations": {
    "vscode": {
      "extensions": [
        "surfer-project.surfer",
        "GitHub.vscode-github-actions",
        "technosophos.vscode-make",
        "rashwell.tcl",
        "mshr-h.veriloghdl",
        "ms-python.python"
      ]
    }
  }
}
